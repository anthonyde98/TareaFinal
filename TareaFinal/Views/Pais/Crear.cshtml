<style>
    .formulario {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
</style>

<div class="container mt-4">
    <div class="formulario card">
        <div class="card-body">
            <span class="h3">Agregar país</span>
            <form class="mt-3" method="POST" action="/Pais/Crear">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-globe-americas"></i></span>
                    <input type="text" class="form-control" placeholder="Ingrese nombre" aria-label="Nombre" name="Nombre" id="Nombre" required>
                </div>
                <div>
                    <input class="btn btn-secondary " type="submit" value="Agregar" />
                </div>
            </form>
            <div class="mt-2">
                @if (@ViewBag.Datos == "Este país ya existe")
                {
                    <p class="text-danger">@ViewBag.Datos</p>
                }
                else
                {
                    <p class="text-info">@ViewBag.Datos</p>
                }
            </div>
        </div>
    </div>
</div>
<div class=" mt-5">
    <a class="btn btn-lg font-weight-bold btn-light" href="/Pais"><i class="fas fa-arrow-left m-2"></i>Volver</a>
</div>
