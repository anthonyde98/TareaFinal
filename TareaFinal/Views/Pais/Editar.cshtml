@model TareaFinal.Models.Pais

<style>
    .formulario {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
</style>

<div class="container mt-4">
    <div class="formulario card">
        <div class="card-body">
            <span class="h3">Editar pais</span>
            <form class="mt-3" method="POST" action="/Pais/Editar">
                <div class="input-group mb-3">
                    <input type="hidden" asp-for="IdPais" />
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-globe-americas"></i></span>
                    <input type="text" class="form-control" placeholder="Ingrese nombre" asp-for="Nombre" aria-describedby="basic-addon1" autofocus required>
                </div>
                <div>
                    <input class="btn btn-secondary " type="submit" value="Editar" />
                </div>
                <div class="text-info mt-2">
                    <p>@ViewBag.Datos</p>
                </div>
            </form>
        </div>
    </div>
</div>
<div class=" mt-5">
    <a class="btn btn-lg font-weight-bold btn-light" href="/Pais"><i class="fas fa-arrow-left m-2"></i>Volver</a>
</div>
