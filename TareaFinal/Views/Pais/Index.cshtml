<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <span class="h3">Listado de paises</span>
            <a class="btn btn-lg btn-dark float-right font-weight-bold" href="Pais/Crear"><i class="fas fa-plus mr-2"></i> Agregar país</a>
            <div class="table-responsive mt-5" style="border-radius: 7px; box-shadow: 0 3px 4px rgba(0, 0, 0, 0.5)">
                <table class="table table-striped m-0">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center" scope="col">Código</th>
                            <th scope="col">País</th>
                            <th class="text-center" scope="col">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th class="text-center" scope="row">@item.IdPais</th>
                                <td>@item.Nombre</td>
                                <td class="text-center">
                                    @Html.ActionLink("", "Detalle", new { id = item.IdPais }, new { @class = "text-decoration-none btn btn-link btn-outline-info fas fa-info-circle", style = "color: blue", title = "Detalle" })
                                    @Html.ActionLink("", "Editar", new { id = item.IdPais }, new { @class = "text-decoration-none btn btn-link btn-outline-warning fas fa-pen-alt", style = "color: orange", title = "Editar" })
                                    @Html.ActionLink("", "Eliminar", new { id = item.IdPais }, new { @class = "text-decoration-none btn btn-link btn-outline-danger fas fa-trash-alt", style = "color: darkred", title = "Eliminar" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


